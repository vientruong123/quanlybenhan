@model DACN.Models.Lich
@{
    ViewBag.Title = "Đặt Lịch Hẹn";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
    var userBN = Session["userAdmin"] as DACN.Models.BenhNhan;
}
<h1 class="text-center wow fadeInUp mt-5">Đặt Lịch Hẹn</h1>
@using (Html.BeginForm("DatLichHen", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="main-form" style="clear:left">
        <div class="row-cols-6 m-t-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <input type="hidden" class="form-control" id="MaBenhNhan" name="MaBenhNhan" value="@userBN.MaBenhNhan">

            <div class="col-12 py-2 wow fadeInUp">
                <label class="ml-2">Chọn Ngày:</label>
                @Html.DropDownList("MaLich", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLich, "", new { @class = "text-danger" })
            </div>

            <div class="col-12 py-2 wow fadeInUp">
                <label class="ml-2">Nội dung:</label>
                <textarea name="NoiDung" id="NoiDung" class="form-control" rows="6"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 wow zoomIn ml-3 mb-5">Đặt Lịch</button>
    </div>
}